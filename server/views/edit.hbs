<div class="editAppointmentText"><h2 class="title" style="color: black;">Edit your appointment</h2></div><br/>

<form class="form" action="/appointments/edit/{{id}}" method="post">
  <label for="gp" class="form-item">
    Select your GP：
    <select id="gp" name="gp" value={{gp}}>
      <option value="gp1">GP1</option>
      <option value="gp2">GP2</option>
      <option value="gp3">GP3</option>
      <option value="gp4">GP4</option>
      <option value="gp5">GP5</option>
      <option value="gp6">GP6</option>
    </select>
  </label>

  <label for="name" class="form-item">
    Name: <input type="text" name="name" id="name" value={{name}} required>
  </label>

  <label for="phone" class="form-item">
    Phone: <input type="text" name="phone" id="phone" value={{phone}}>
  </label>

  <label for="email" class="form-item">
    Email: <input type="text" name="email" id="email" value={{email}} required>
  </label>

  <label for="note" class="form-item">
    Note: <input type="text" name="note" id="note" value={{note}}>
  </label>

  <label for="date" class="form-item">
    Prefer Date：<input type="date" id="date" name="date" value={{date}} required>
  </label>

  <label for="time" class="form-item">
    Time：<input type="time" id="time" name="time" value={{time}} required>
  </label>

  <input type="submit" value="Submit">
</form>
