<h2 class="title">Add a new puppy</h2>

<form class="form" action="/new" method="post">
  <label for="name" class="form-item">
    Name: <input type="text" name="name" id="name">
  </label>

  <label for="breed" class="form-item">
    Breed: <input type="text" name="breed" id="breed">
  </label>

  <label for="owner" class="form-item">
    Owner:
    <input type="text" name="owner" id="owner">
  </label>

  <label for="image" class="form-item">
    Image URL: <input type="text" name="image" id="image">
  </label>

  <input type="submit" value="Submit">
</form>
